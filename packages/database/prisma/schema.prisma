generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// SaaS Multi-tenancy
model Tenant {
  id        String    @id @default(uuid())
  name      String
  slug      String    @unique
  plan            String    @default("FREE") // FREE, PRO, ENTERPRISE
  status          String    @default("ACTIVE") // ACTIVE, TRIAL, OVERDUE, BLOCKED
  asaasCustomerId String?   @unique
  nextBillingDate DateTime?
  lastPaymentDate DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  users     User[]
  projects  Project[]
  roles     Role[]
}

model User {
  id         String   @id @default(uuid())
  email      String   @unique
  name       String?
  password   String?
  firebaseId String?  @unique
  roleId     String?
  role       Role?    @relation(fields: [roleId], references: [id])
  tenantId   String
  tenant     Tenant   @relation(fields: [tenantId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Role {
  id          String       @id @default(uuid())
  name        String
  slug        String       @unique
  tenantId    String
  tenant      Tenant       @relation(fields: [tenantId], references: [id])
  permissions Permission[]
  users       User[]
  menuItems   MenuItem[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Permission {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique // ex: "user:create"
  description String?
  roles       Role[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model MenuItem {
  id          String   @id @default(uuid())
  label       String
  icon        String?
  path        String?
  parentId    String?
  parent      MenuItem? @relation("MenuTree", fields: [parentId], references: [id])
  children    MenuItem[] @relation("MenuTree")
  order       Int      @default(0)
  requiredPermission String?
  roles       Role[]
  tenantId    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum TenantType {
  SINGLE_DB
  MULTI_DB
}

model Project {
  id              String   @id @default(uuid())
  name            String
  description     String?
  tenantId        String
  tenant          Tenant   @relation(fields: [tenantId], references: [id])
  
  // Infrastructure & Automation
  multiTenantType TenantType @default(SINGLE_DB)
  restKey         String?    @default(uuid())
  installToken    String?    @default(uuid())
  logSettings     Json?      // Configurações de retenção, níveis, etc.
  
  modules         Module[]
  webhooks        Webhook[]
  services        Service[]
  automations     AutomationTrigger[]
  deployments     Deployment[]
  workflows       Workflow[]
  databases       ProjectDatabase[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ProjectDatabase {
  id          String   @id @default(uuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id])
  name        String   // Ex: "Principal", "MySQL Consulta"
  type        String   // postgresql, mysql, sqlite
  isPrimary   Boolean  @default(false)
  
  // Configurações de Conexão (Sandbox/Internal)
  host        String?
  port        Int?
  database    String?
  username    String?
  password    String?
  
  // Produção (Connection String ou Env Key)
  prodUrl     String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Webhook {
  id          String   @id @default(uuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id])
  tenantId    String   @default("default-tenant-id")
  name        String
  url         String
  token       String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Service {
  id          String   @id @default(uuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id])
  tenantId    String   @default("default-tenant-id")
  name        String
  content     String   // O código TS gerado ou editado
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AutomationTrigger {
  id          String   @id @default(uuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id])
  tenantId    String   @default("default-tenant-id")
  eventType   String   // EX: ON_CREATE, ON_WEBHOOK
  actionType  String   // EX: SEND_EMAIL, NOTIFY_URL
  config      Json     // Parâmetros da automação
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Define the logic generated by the IDE
model Module {
  id        String   @id @default(uuid())
  name      String
  type      String   // PAGE, COMPONENT, API_ROUTE
  schema    Json     // The visual design metadata
  tenantId  String   @default("default-tenant-id")
  projectId String
  project   Project  @relation(fields: [projectId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Deployment {
  id        String   @id @default(uuid())
  status    String   // PENDING, RUNNING, STOPPED, FAILED
  url       String?
  port      Int
  tenantId  String   @default("default-tenant-id")
  projectId String
  project   Project  @relation(fields: [projectId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Low-Code Automation Engine
model Workflow {
  id              String         @id @default(uuid())
  name            String
  description     String?
  targetModel     String         // Ex: "Pedido", "Cliente"
  triggerEvent    String         // ON_CREATE, ON_UPDATE, ON_DELETE
  isActive        Boolean        @default(true)
  config          Json?          // Armazena o grafo visual (React Flow)
  tenantId        String
  projectId       String
  project         Project        @relation(fields: [projectId], references: [id])
  steps           WorkflowStep[]
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
}

model WorkflowStep {
  id          String   @id @default(uuid())
  workflowId  String
  workflow    Workflow @relation(fields: [workflowId], references: [id])
  tenantId    String   @default("default-tenant-id")
  type        String   // WEBHOOK, LOG, CONDITION, SEND_EMAIL, ASAAS_PAYMENT
  config      Json     // Parâmetros (URL, template, etc.)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
